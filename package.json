{
  "name": "artsupply",
  "version": "0.0.1",
  "description": "A utility library for creative coding.",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "lint": "eslint .",
    "test": "jest .",
    "prepublish": "npm run lint && npm test && npm run build"
  },
  "dependencies": {
    "d3-delaunay": "^6.0.2",
    "random-js": "^2.1.0",
    "simplex-noise": "^3.0.0"
  },
  "devDependencies": {
    "eslint": "^8.25.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.0",
    "prettier": "^2.7.1"
  },
  "source": "src/index.js",
  "main": "dist/artsupply.js",
  "module": "dist/artsupply.module.js",
  "unpkg": "dist/artsupply.umd.js",
  "author": "Romello Goodman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/romellogoodman/artsupply.git"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
