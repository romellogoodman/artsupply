{
  "name": "artsupply",
  "version": "1.0.0",
  "description": "A utility library for creative coding.",
  "scripts": {
    "dev": "microbundle watch",
    "build": "microbundle",
    "lint": "eslint .",
    "test": "jest .",
    "prepublish": "npm run lint && npm test && npm run build"
  },
  "dependencies": {
    "simplex-noise": "^4.0.1"
  },
  "devDependencies": {
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.9.0",
    "husky": "^8.0.3",
    "jest": "^29.6.2",
    "lint-staged": "^13.2.3",
    "microbundle": "^0.15.1",
    "prettier": "^3.0.0"
  },
  "source": "src/index.js",
  "main": "dist/artsupply.js",
  "module": "dist/artsupply.module.js",
  "unpkg": "dist/artsupply.umd.js",
  "author": "Romello Goodman",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/romellogoodman/artsupply.git"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md}": [
      "prettier --write"
    ]
  }
}
